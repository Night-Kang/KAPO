/* pages/me/me.wxss */
page {
  background: #fff;
}
.Rose-height{
  position: relative;
}
swiper{
  position: relative;
  z-index: 2;
}
.Rose-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  filter: blur(4px) grayscale(20%);

}
.Rose-bg image{
  width: 100%;
  height: 100%
}
.Rose-detail {
  background: #fff;
  margin: 20rpx;
  font-size: 32rpx;
  line-height: 1.6;
  padding: 0 0 80rpx;
  color: #666;
}
.Rose-title {
  color: #000;
  font-size: 48rpx;
  line-height: 1.2;
}
.Rose-addtime {
  margin: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}
.Rose-imgitem {
  width: 100%;
  height: 330rpx;
}
.Rose-item {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  font-size: 30rpx;
  color: #f2f2f2;
}
.Rose-box{
  padding: 40rpx;

}
.Rose-line {
  font-size: 36rpx;
  position: relative;
  padding: 10rpx 20rpx;
  line-height: 1;
  color: #fff;
  font-weight: 500
}
.Rose-line:before {
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  content: '';
  background: #4bb777;
}
.Rose-h3 {
  padding: 20rpx 0 0;
  font-weight: 600;
}
.Rose-concact {
  display: block;
}
.Rose-work {
  font-size: 24rpx;
  font-weight: 400;
}
