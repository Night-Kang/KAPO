.banner-swiper {
    width: 100%;
    height: 600rpx;
    overflow: hidden;
    margin: 50rpx 0;
}
swiper {
    display: block;
    position: relative;
}
.slide-image {
    width: 96%;
    display: block;
    margin: 0 auto;
    height: 700rpx;
    margin-top:25rpx;
    transition: all 0.15s linear;
    border-radius: 8rpx;
     box-shadow: 0 0 20px rgba(0,0,0,0.6)
}
.active{
    margin-top:0rpx;
    height: 800rpx;
}
.text-center{
    text-align: center;
    font-size: 32rpx;
}
