/* pages/add/add.wxss */
.Rose-form {
  padding: 20rpx;
  background: #fff;
  margin: 0 0 20rpx;
}
.Rose-input {
  flex: 1;
  line-height: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-section_title {
  display: block;
  width: 3em;
  font-size: 30rpx;
  line-height: 1;
  padding: 24rpx 0;
  color: #666;
}
.Rose-section {
/*  display: flex;*/
  width: 100%;
  text-align: left;
  clear: both;
  margin: 20rpx 0;
  overflow: hidden;
  justify-content: space-between;
}
.Rose-btn {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 20rpx;
}
button[disabled]:not([type]) {
  background: #ddd;
  color: #fff;
}

textarea{
   width:initial;

}
