/* pages/feedback/feedback.wxss */
.Rose-tip {
  padding: 10px;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}
.Rose-lists {
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  background: #fff;
}
.Rose-feeds {
  padding: 10px;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 32rpx;
  color: #666;
}
.Rose-line {
  margin-left: 10px;
  padding: 20rpx 20rpx 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  line-height: 1.5;
}
.Rose-line:last-child {
  border-bottom: none;
}
.Rose-title {
  font-size: 36rpx;
  color: #000;
}
.Rose-content {
  margin: 14rpx 0 10rpx;
  font-size: 30rpx;
  color: #3b3b3b;
  color: both;
  line-height: 1.6;
}
.Rose-info {
  display: flex;
  width: 100%;
  font-size: 28rpx;
  color: #a8a8a8;
  line-height: 1;
}
.Rose-name {
  width: 40%;
  float: left;
  text-align: left;
}
.Rose-time {
  flex: 1;
  text-align: right;
  line-height: 40rpx;
  padding-top: 16rpx;
}
.Rose-edit {
  width: 20%;
  float: left;
}
.Rose-edit icon {
  font-size: 36rpx;
  margin: 0 10rpx;
  color: #999;
}
.female {
  color: #ff80c2;
}
.male {
  color: #8a90fa;
}
.Rose-name .iconfont {
  font-size: 40rpx;
  vertical-align: text-bottom;
}
/*改版评论*/
.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #d9d9d9;
  background: #fff;
  z-index: 5
}
.Rose-flex {
  padding: 14rpx 20rpx;
  display: flex;
}
.Rose-none {
  display: block;
  flex: none;
  width: 80rpx;
}
.text-left {
  text-align: left;
}
.text-right {
  text-align: right;
}
.Rose-none .iconfont {
  font-size: 40rpx;
  color: #999;
  padding-top: 6rpx;
}
.Rose-none .iconfont.icon-hongbao1 {
  color: #ff80c2;
}
.Rose-input {
  flex: 1;
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #d9d9d9;
  line-height: 1;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-post {
  font-size:24rpx;
  margin:0 0 0 20rpx;
  height: 70rpx;
  line-height:70rpx;
  width:auto;
  background: #4bb777;
  color: #fff
}
button[disabled]:not([type]) {
  background: #d9d9d9;
}
