/* pages/feedback/feedback.wxss */
.Rose-form{
  padding: 10px;
  background: #fff;
  margin: 0 0 10px;
}
.Rose-input{
  flex: 1;
  line-height: 1;
  padding: 10rpx 20rpx;
  border: 1rpx solid #D9D9D9;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-section_title{
 display:block;
 width:3em;

 font-size:30rpx;
 line-height:1;
 padding:24rpx 0 0;
}
.Rose-section{
  display:flex;
  width:100%;
  text-align:left;
  clear:both;
  margin:20rpx 0;
  overflow:hidden;
  justify-content:space-between;
}
.sure-btn {
  width: 100%;
  height: 100%;
  margin-top: 30px;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 10px
}
.sure-btn.disable {
  background: #ddd;
}

.Rose-tip{
  padding: 10px;
  margin-top: 10rpx;
 
  font-size: 24rpx;
  color: #666
}

