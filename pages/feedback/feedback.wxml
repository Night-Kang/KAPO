<!--pages/feedback/feedback.wxml-->
<view class="Rose-form">
  <form bindsubmit="formSubmit">
    <view class="Rose-section">
      <view class="Rose-section_title">标题</view>
      <input name="time" value="{{title}}" class="Rose-input" bindinput="forTitle" />
    </view>
    <view class="Rose-section">
      <view class="Rose-section_title">内容</view>
      <textarea name="beizhu" class="Rose-input" maxlength="-1" value="{{remark}}" bindinput="forRemark" placeholder="说点什么吧"></textarea>
    </view>
    <view class="Rose-section">
      <button formType="submit" class="Rose-btn" disabled="{{disabled}}" wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
        <!-- <icon class="icon iconfont icon-tijiao2"></icon> -->
        提交
      </button>
    </view>
  </form>
</view>
<view class="Rose-lists" wx:if="{{items.length > 0}}">
  <view class="Rose-feeds">反馈列表</view>
  <view class="Rose-line" wx:for="{{items}}" wx:key="index" bindlongpress="editItem">
    <view class="Rose-title">{{item.title}}</view>
    <view class="Rose-content">{{item.remark}}</view>
    <view class="Rose-info">
      <view class="Rose-name">
        <icon wx:if="{{item.sex==2}}" class="iconfont icon-nvsheng female"></icon>
        <icon wx:else class="iconfont icon-nansheng male"></icon> {{item.username}}
      </view>
      <block wx:if="{{showEdit && isRose}}">
        <view class="Rose-edit">
          <icon class="iconfont icon-delete" data-id="{{item.id}}" bindtap="deleteOne"></icon>
        </view>
      </block>
      <view class="Rose-time">{{item.create_time}}</view>
    </view>
  </view>
</view>
<view class="allLoaded" wx:if="{{items.length!=0 && !loadMore}}">
  <text class="line-word">我是有底线的~</text>
</view>
<loading load-more="{{loadMore}}"></loading>
