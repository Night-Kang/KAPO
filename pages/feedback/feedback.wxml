<view class="Rose-fixed" wx:if="{{ catid !='19' && id != '124' && id !='145' }}">
  <!-- 发表评论 -->
  <view class="Rose-box">
    <view class="Rose-form">
      <div class="Rose-flex">
        <view class="Rose-none text-left" bindtap="rewardRose">
          <icon class="iconfont icon-hongbao1"></icon>
        </view>
        <input class="Rose-input" value="{{remark}}" bindinput="forRemark" focus="{{focus}}" maxlength="-1" placeholder="{{placeholder}}" />
        <button class="Rose-none Rose-post" disabled="{{disabled}}" wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" >
          评论
        </button>
      </div>
    </view>
  </view>
</view>
