<!--pages/more/more.wxml-->
<view class="Rose-form">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="Rose-section">
      <view class="Rose-section_title">时长</view>
      <input name="time" value="{{title}}" class="Rose-input" bindinput="forTitle" />
    </view>
    <view class="Rose-section">
      <view class="Rose-section_title">备注</view>
      <textarea name="beizhu" class="Rose-input" value="{{remark}}" bindinput="forRemark" placeholder="说点什么吧"></textarea>
    </view>
    <view class="Rose-section">
      <button formType="submit" class="Rose-btn" disabled="{{disabled}}"  wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo"> 提交</button>
    </view>
  </form>
</view>

<view class="Rose-floor-title">
      <text wx:if="{{catid==1}}"> 每天一个俯卧撑</text>
      <text wx:if="{{catid==2}}"> 读100本书</text>
      <text wx:if="{{catid==3}}"> 学一门外语</text>
      <text wx:if="{{catid==4}}"> 弹吉他</text>
</view>
<view class="Rose-form">

  <view class="Rose-year-line" >
    <view class="Rose-year">
      <icon class="iconfont icon-md-shijian"></icon> 2018
    </view>
    <view class="Rose-month-list">
      <view class="Rose-month">
        <icon class="iconfont icon-xiangshang"></icon> 07月
      </view>
      <view class="Rose-day-list" wx:for="{{items}}" wx:key="index" >
        <view class="Rose-circle"></view>
        <view class="Rose-day">{{index}}</view>
        <view class="Rose-itemline-item">
          <view class="Rose-event" wx:for="{{item}}" wx:for-index="idx" wx:for-item="day" wx:key="idx">
            <view class="Rose-event-icon">
              <icon class="iconfont icon-zan4"></icon>
            </view>
            <view>
              <view class="Rose-title">{{day.title}}</view>
              <view class="Rose-time">{{day.insert_time}}</view>
              <view class="Rose-content">
                {{day.remark}}
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="allLoaded" wx:if="{{!loadMore}}">
  <text class="line-word">我是有底线的~</text>
</view>
