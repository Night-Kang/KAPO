/* pages/more/more.wxss */
.Rose-form {
  padding: 20rpx;
  background: #fff;
  margin: 0 0 20rpx;
}
.Rose-input {
  flex: 1;
  line-height: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-section_title {
  display: block;
  width: 3em;
  font-size: 30rpx;
  line-height: 1;
  padding: 24rpx 0 0;
  color: #666;
}
.Rose-section {
  display: flex;
  width: 100%;
  text-align: left;
  clear: both;
  margin: 20rpx 0;
  overflow: hidden;
  justify-content: space-between;
}
.Rose-btn {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 20rpx;
}
button[disabled]:not([type]) {
  background: #ddd;
  color: #fff;
}
/*时间轴*/
.Rose-floor-title {
  padding: 20rpx 30rpx;
  font-size: 34rpx;
  background: #fff;
  color: #000;
  text-align: center;
  font-weight: 500;
}
.Rose-year-line {
  background: #fff;
}
.Rose-circle {
  position: absolute;
  width: 22rpx;
  height: 22rpx;
  border-radius: 100%;
  border: 1px solid #4bb777;
  display: block;
  left: -32rpx;
  top: 6rpx;
  background: #fff;
}
.Rose-circle:before {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background: #4bb777;
  content: "";
  border-radius: 100%;
  top: 6rpx;
  left: 6rpx;
}
.Rose-month {
  position: relative;
  padding: 0 0 30rpx;
  font-size: 32rpx;
  color: #666;
}
.Rose-year {
  padding: 0 20rpx 40rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: 500;
}
.Rose-month-list {
  position: relative;
  padding-left: 20rpx;
}
.Rose-day-list {
  position: relative;
  padding: 0 0 10rpx;
}
.Rose-day {
  font-size: 28rpx;
  color: #999;
}
.Rose-title {
  font-size: 32rpx;
  color: #333;
}
.Rose-time {
  font-size: 20rpx;
  color: #999;
}
.Rose-add-time {
  display: block;
  font-size: 20rpx;
  margin: 0 0 10rpx;
  color: #999;
}
.Rose-content {
  margin: 10rpx 0 0;
  font-size: 28rpx;
  color: #666;
  word-break: break-word;
  /*  line-height: 1.4em;
  display: -webkit-box;
  -webkit-line-clamp: 15; 限制显示15行
  -webkit-box-orient: vertical;
  overflow: hidden;*/
}
.Rose-year-line {
  position: relative;
  margin: 0 20rpx 0 40rpx;
}
.Rose-year-line:before {
  position: absolute;
  left: 0;
  top: 0;
  width: 2rpx;
  height: 100%;
  background: #ccc;
  content: '';
}
.Rose-event {
  border: 2rpx solid #eee;
  padding: 10rpx;
  border-radius: 8rpx;
  display: flex;
  margin: 0 0 20rpx;
}
.Rose-circle-img {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.Rose-event-icon {
  width: 80rpx;
  flex: none;
  font-size: 20rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.Rose-event-icon icon {
  font-size: 40rpx;
  color: #4bb777;
  margin: 0 auto;
  display: block;
}
.Rose-icon-item {
  text-align: right
}
.Rose-icon-item icon {
  font-size: 40rpx;
  color: #999;
  margin-right: 40rpx;
}
.icon-md-shijian {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  font-size: 64rpx;
  margin-left: -52rpx;
  background: #fff;
  color: #333;
}
.icon-xiangshang {
  display: inline-block;
  vertical-align: sub;
  font-size: 48rpx;
  color: #4bb777;
  margin-left: -44rpx;
  background: #fff;
  font-weight: 500;
}
.icon-image {
  font-size: 52rpx;
  color: #ccc;
  margin-left: 6px;
}
.Rose-upimg {
  width: 100%;
}
.Rose-imgbox {
  margin: 16rpx 1% 0;
  width: 33%;
  color: #999;
  text-align: center;
}
.Rose-image {
  width: 100%;
  height: 160rpx;
}
.Rose-itemline-item {
  margin: 10rpx 0;
}
.Rose-item {
  display: flex;
  justify-content: flex-start;
}
.Rose-img {
  height: 140rpx;
  width: 100%;
}
.Rose-contentbox {
  width: 100%;
}
.Rose-getuser {
  position: fixed;
  right: 20rpx;
  bottom: 40rpx;
  border: 2rpx solid #f2f2f2;
  z-index: 2;
  line-height: 1;
  padding: 10rpx;
  border-radius: 100%;
}
.icon-yonghu {
  margin-top: -18rpx;
}
