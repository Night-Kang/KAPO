/* pages/more/more.wxss */

.Rose-form {
  padding: 10px;
  background: #fff;
  margin: 0 0 10px;
}

.Rose-input {
  flex: 1;
  line-height: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 4rpx;
  font-size: 30rpx;
}

.Rose-section_title {
  display: block;
  width: 3em;
  font-size: 30rpx;
  line-height: 1;
  padding: 24rpx 0 0;
}

.Rose-section {
  display: flex;
  width: 100%;
  text-align: left;
  clear: both;
  margin: 20rpx 0;
  overflow: hidden;
  justify-content: space-between;
}

.Rose-btn {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 10px;
}

button[disabled]:not([type]) {
  background: #ddd;
  color: #fff;
}

/*时间轴*/

.Rose-floor-title {
  padding: 20rpx 30rpx;
  font-size: 34rpx;
  background: #fff;
  color: #000;
  text-align: center;
  font-weight: 500;
}

.Rose-year-line {
  background: #fff;
}

.Rose-circle {
  position: absolute;
  width: 11px;
  height: 11px;
  border-radius: 100%;
  border: 1px solid #4bb777;
  display: block;
  left: -16px;
  top: 3px;
  background: #fff;
}

.Rose-circle:before {
  position: absolute;
  width: 5px;
  height: 5px;
  background: #4bb777;
  content: "";
  border-radius: 100%;
  top: 3px;
  left: 3px;
}

.Rose-month {
  position: relative;
  padding: 0 0 15px;
  font-size: 16px;
  color: #666;
}

.Rose-year {
  padding: 0 10px 20px;
  color: #333;
  font-size: 16px;
  font-weight: 500;
}

.Rose-month-list {
  position: relative;
  padding-left: 10px;
}

.Rose-day-list {
  position: relative;
  padding: 0 0 5px;
}

.Rose-day {
  font-size: 14px;
  color: #333;
}

.Rose-title {
  font-size: 32rpx;
  color: #333;
}

.Rose-time {
  font-size: 20rpx;
  color: #999;
}

.Rose-add-time {
  display: block;
  font-size: 20rpx;
  margin: 0 0 10rpx;
  color: #999;
}

.Rose-content {
  /*  max-height: 21em;*/
  margin: 5px 0 0;
  font-size: 28rpx;
  color: #666; /*  line-height: 1.4em;
  display: -webkit-box;
  -webkit-line-clamp: 15; 限制显示15行
  -webkit-box-orient: vertical;
  overflow: hidden;*/
}

.Rose-year-line {
  position: relative;
  margin: 0 10px 0 20px;
}

.Rose-year-line:before {
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  height: 100%;
  background: #ccc;
  content: '';
}

.Rose-event {
  border: 1px solid #f2f2f2;
  padding: 5px;
  border-radius: 4px;
  display: flex;
  margin: 0 0 10px;
}

.Rose-circle-img {
  display: block;
  width: 40px;
  height: 40px;
  border-radius: 100%;
}

.Rose-event-icon {
  width: 40px;
  flex: none;
  font-size: 20rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.Rose-event-icon icon {
  font-size: 40rpx;
  color: #4bb777;
  margin: 0 auto;
  display: block;
}

.Rose-icon-item {
  margin-bottom: 20rpx;
}

.Rose-icon-item icon {
  font-size: 40rpx;
  color: #999;
  margin-right: 40rpx;
}

.icon-md-shijian {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  font-size: 30px;
  margin-left: -24px;
  background: #fff;
  color: #333;
}

.icon-xiangshang {
  display: inline-block;
  vertical-align: sub;
  font-size: 24px;
  color: #4bb777;
  margin-left: -22px;
  background: #fff;
  font-weight: 500;
}

.icon-image {
  font-size: 52rpx;
  color: #ccc;
  margin-left: 6px;
}

.Rose-upimg {
  /* display: flex; */
  width: 100%;
}

.Rose-imgbox {
  margin: 0 1%;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  width: 31%;
  float: left;
}

.Rose-image {
  width: 100%;
  height: 160rpx;
}

.Rose-itemline-item {
  margin: 10rpx 0;
}

.Rose-item {
  display: flex;
}

.Rose-item image {
  flex: 1;
}

.Rose-img {
  height: 120rpx;
  width: 100%;
}

.Rose-contentbox {
  width: 100%;
}
