/* pages/peoject_page/project_page.wxss */
.Rose-white {
  background: #fff
}
image {
  width: 100%;
}
.Rose-detail {
  background: #fff;
  font-size: 32rpx;
  line-height: 1.6;
  padding: 20rpx 20rpx 80rpx;
  color: #666
}
.Rose-title {
  color: #000;
  font-size: 48rpx;
  line-height: 1.2
}
.Rose-addtime {
  margin: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}
.Rose-imgitem {
  height: 330rpx;
  display: block;
  width: 100%;
}
.wxParse-pre {
  background: #000;
  padding: 10rpx;
  margin: 20rpx 0;
}
.Rose-keywords {
  margin-left: 20rpx;
}
.Rose-sorry {
  padding: 120rpx 0 40rpx;
  font-size: 24rpx;
  color: #ccc;
}
.Rose-item {
  margin-top: 30px;
  font-size: 32rpx
}
.wxParse-p {
  word-break: break-all;
  padding: 10rpx 0;
}
.Rose-line, .wxParse-h3 {
  font-size: 36rpx;
  position: relative;
  padding: 10rpx 20rpx;
  line-height: 1;
  color: #333
}
.Rose-line:before, .wxParse-h3:before {
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  content: '';
  background: #4bb777
}
.wxParse-h3 {
  margin: 50rpx 0 0;
}

/* 评论 */
.Rose-form {
  padding: 0 20rpx 20rpx;
  background: #fff;
  margin: 20rpx 0
}
.Rose-tab {

  /*padding:  20rpx;*/
  margin: 0 0 20rpx;
  color: #666;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 32rpx;
}
.Rose-input {
  flex: 1;
  line-height: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-section_title {
  display: block;
  width: 3em;
  font-size: 30rpx;
  line-height: 1;
  padding: 24rpx 0 0;
}
.Rose-section {
  display: flex;
  width: 100%;
  text-align: left;
  clear: both;
  margin: 20rpx 0;
  overflow: hidden;
  justify-content: space-between;
}
.Rose-btn {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 20rpx;
}
button[disabled]:not([type]) {
  background: #ddd;
  color: #fff;
}
textarea.Rose-input {
  height: 200rpx;
}
.Rose-comment {
  margin: 20rpx 0;
  background: #fff
}
.Rose-tab {
  display: flex
}
.Rose-index {
  padding: 20rpx;
  position: relative;
  flex: 1;
  text-align: center
}
.Rose-index:after {
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  width: 0;
  height: 4rpx;
  background: transparent;
  content: '';
  transition: all 0.25s linear;
}
.Rose-index.Rose-active {
  color: #599eec
}
.Rose-index.Rose-active:after {
  width: 100%;
  left: 0;
  background: #599eec;
}
.Rose-items {
  padding: 10px 0;
  border-bottom: 1px solid #f2f2f2;
}
.Rose-comment-title {
  line-height: 2;
  color: #333；
  font-size:16px;
}
.Rose-comment-content {
  padding: 10rpx 0;
  color: #666;
  font-size: 14px;
  line-height: 1.6
}
.Rose-info {
  display: flex;
  width: 100%;
  font-size: 28rpx;
  color: #a8a8a8;
  line-height: 1;
}
.Rose-name {
  width: 40%;
  float: left;
  text-align: left;
}
.Rose-time {
  flex: 1;
  text-align: right;
  line-height: 40rpx;
  padding-top: 16rpx;
}
.Rose-edit {
  width: 20%;
  float: left;
}
.Rose-edit icon {
  font-size: 36rpx;
  margin: 0 10rpx;
  color: #999;
}
.female {
  color: #ea2d48;
}
.male {
  color: #2a36b1;
}
.Rose-name .iconfont {
  font-size: 40rpx;
}
.Rose-empty {
  padding: 5em;
  text-align: center;
  font-size: 14px;
  color: #666
}
