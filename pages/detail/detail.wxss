image {
  display: block;
  width: 100%;
}
.Rose-content {
  overflow: hidden;
}
.Rose-detail {
  background: #fff;
  font-size: 32rpx;
  line-height: 1.6;
  padding: 20rpx;
  color: #666;
}
.Rose-title {
  color: #000;
  font-size: 48rpx;
  line-height: 1.2;
}
.Rose-addtime {
  margin: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}
.Rose-imgitem {
  height: 330rpx;
  display: block;
  width: 100%;
}
.wxParse-pre {
  background: #000;
  padding: 10rpx;
  margin: 20rpx 0;
  white-space: pre;
  overflow: scroll;
}
.Rose-keywords {
  margin-left: 20rpx;
}
.Rose-sorry {
  padding: 120rpx 0 40rpx;
  font-size: 24rpx;
  color: #ccc;
}
.Rose-item {
  margin-top: 30px;
  font-size: 32rpx;
}
.wxParse-p {
  word-break: break-all;
  padding: 10rpx 0;
}
.Rose-lines, .wxParse-h3 {
  font-size: 36rpx;
  position: relative;
  padding: 10rpx 20rpx;
  line-height: 1;
  color: #333;
}
.Rose-lines:before, .wxParse-h3:before {
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  content: '';
  background: #4bb777;
}
.wxParse-h3 {
  margin: 80rpx 0 0;
}
.Rose-items {
  padding: 30rpx 0 0;
}
.Rose-items:last-child .Rose-user{
  border-bottom: none
}
.Rose-lists {
  padding: 20rpx;
}
.Rose-comment-title {
  line-height: 2;
  color: #333;
  font-size: 16px;
}
.Rose-comment-content {
  color: #666;
  font-size: 32rpx;
  line-height: 44rpx;
}
.Rose-user {
  flex: 1;
  padding: 0 0 20rpx;
  font-size: 24rpx;
  color: #a8a8a8;
  line-height: 1;
  border-bottom: 1rpx solid #f2f2f2;
}
.Rose-names {
  font-size: 28rpx;
  color: #666;
}
.Rose-times {
  padding: 16rpx 0;
  color: #999;
  font-size: 20rpx;
}
.Rose-edit {
  width: 20%;
  float: left;
}
.Rose-edit icon {
  font-size: 36rpx;
  margin: 0 10rpx;
  color: #999;
}
.Rose-empty {
  padding: 40rpx 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.wxParse-li {
  position: relative;
  padding-left: 40rpx;
}
.wxParse-div {
  word-break: break-all;
}
.wxParse-li:before {
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  width: 10rpx;
  height: 10rpx;
  background: #999;
  content: '';
  border-radius: 100%;
}
.wxParse-h5 {
  padding: 5rpx 0;
  font-weight: 600;
}
.iconfont.icon-kafei {
  display: block;
  font-size: 90rpx;
  color: #eee;
  margin-bottom: 10rpx;
}
.Rose-small {
  padding: 0 10rpx;
  font-size: 30rpx;
  color: #999;
}
.Rose-back {
  margin: 20rpx 0 0 20rpx;
  color: #999;
  font-size: 28rpx;
  padding: 10rpx;
  line-height: 1.6;
  background: #f5f5f5;
}
.Rose-tt {
  color: #333;
}
.Rose-back-item {
  line-height: 1.4;
  word-break: break-all;
  padding: 5rpx 0;
}
.Rose-image {
  flex: none;
  width: 70rpx;
  height: 70rpx;
  border-radius: 4rpx;
}
.Rose-resource {
  display: flex;
}
.Rose-form {
  margin: 0 0 0 20rpx;
}
.Rose-end {
  margin:-20rpx 0 0;
  padding: 30rpx 0;
  text-align: center;
  line-height: 1;
  border-top: 1rpx solid #f2f2f2
}
.Rose-word {
  font-size: 30rpx;
  color: #999;
  line-height: 30rpx;
}
.text-center {
  text-align: center;
}
.icon-xiangqufill {
  color: #ff80c2;
}
/*top10推荐*/
.Rose-top {
  margin: 20rpx 0;
  padding: 20rpx 0;
  background: #fff;
}
.Rose-topli {
  position: relative;
  padding: 20rpx 20rpx 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
}
.Rose-topli:before {
  position: absolute;
  left: 20rpx;
  top: 34rpx;
  width: 10rpx;
  height: 10rpx;
  background: #4bb777;
  content: '';
  border-radius: 100%;
}
.Rose-read {
  margin-top: 80rpx;
  color: #999;
  font-size: 30rpx;
}
.Rose-Right {
  float: right;
  font-size: 32rpx;
  color: #999;
}
.Rose-Right .iconfont {
  margin-top: -8rpx;
  vertical-align: middle;
  font-size: 34rpx;
}
.Rose-comments {
  padding: 40rpx 0 0;
  background: #fff;
}
/*改版评论*/
.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #d9d9d9;
  background: #fff;
}
.Rose-flex {
  padding: 14rpx 20rpx;
  display: flex;
}
.Rose-none .iconfont {
  font-size: 52rpx;
  color: #999;
  padding: 15rpx 0 0;
}
.Rose-none .iconfont.icon-hongbao1 {
  color: #4bb777;
}
.Rose-input {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  margin: 0 20rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #d9d9d9;
  line-height: 1;
  font-size: 30rpx;
  border-radius: 4rpx;
}
button[disabled]:not([type]) {
  background: #d9d9d9;
  color: #fff;
  border-radius: 4rpx;
}
button::after {
  border: 1px solid #d9d9d9;
  border-radius: 4rpx;
}
.Rose-post {
  flex: none;
  height: 78rpx;
  background: #4bb777;
  line-height: 78rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 4rpx;
  padding: 0 20rpx;
  text-align: center;
  box-shadow: none;
}
.icon-like-fill {
  color: #4bb777;
}
