/* pages/peoject_page/project_page.wxss */
.Rose-white {
  background: #fff;
}
image {
  width: 100%;
}
.Rose-detail {
  background: #fff;
  font-size: 32rpx;
  line-height: 1.6;
  padding: 20rpx 20rpx 120rpx;
  color: #666;
}
.Rose-title {
  color: #000;
  font-size: 48rpx;
  line-height: 1.2;
}
.Rose-addtime {
  margin: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}
.Rose-imgitem {
  height: 330rpx;
  display: block;
  width: 100%;
}
.wxParse-pre {
  background: #000;
  padding: 10rpx;
  margin: 20rpx 0;
}
.Rose-keywords {
  margin-left: 20rpx;
}
.Rose-sorry {
  padding: 120rpx 0 40rpx;
  font-size: 24rpx;
  color: #ccc;
}
.Rose-item {
  margin-top: 30px;
  font-size: 32rpx;
}
.wxParse-p {
  word-break: break-all;
  padding: 10rpx 0;
}
.Rose-line, .wxParse-h3 {
  font-size: 36rpx;
  position: relative;
  padding: 10rpx 20rpx;
  line-height: 1;
  color: #333;
}
.Rose-line:before, .wxParse-h3:before {
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  content: '';
  background: #4bb777;
}
.wxParse-h3 {
  margin: 80rpx 0 0;
}
/*改版评论*/
.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #d9d9d9;
  background: #fff;
}
.Rose-flex {
  padding: 14rpx 20rpx;
  display: flex;
}
.Rose-none {
  display: block;
  flex: none;
  width: 2.6em;
}
.text-left {
  text-align: left;
}
.text-right {
  text-align: right;
}
.Rose-none .iconfont {
  font-size: 40rpx;
  color: #999;
  padding-top: 6rpx;
}
.Rose-none .iconfont.icon-hongbao1 {
  color: #ff80c2;
}
.Rose-input {
  flex: 1;
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #d9d9d9;
  line-height: 1;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-btn {
  width: 3em;
  height: 100%;
  margin-top: 20rpx;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 20rpx;
}
button[disabled]:not([type]) {
  background: #ddd;
  color: #fff;
}
textarea.Rose-input {
  height: 200rpx;
}
.Rose-items {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}
.Rose-lists {
  padding: 20rpx;
}
.Rose-comment-title {
  line-height: 2;
  color: #333;
  font-size: 16px;
}
.Rose-comment-content {
  color: #666;
  font-size: 32rpx;
  line-height: 44rpx;
}
.Rose-info {
  flex: 1;
  font-size: 24rpx;
  color: #a8a8a8;
  line-height: 1;
}
.Rose-name {
  font-size: 28rpx;
  color: #666;
}
.Rose-time {
  padding: 16rpx 0;
  color: #999;
  font-size: 20rpx;
}
.Rose-edit {
  width: 20%;
  float: left;
}
.Rose-edit icon {
  font-size: 36rpx;
  margin: 0 10rpx;
  color: #999;
}
.Rose-empty {
  padding: 40rpx 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.wxParse-li {
  position: relative;
  padding-left: 40rpx;
}
.wxParse-div {
  word-break: break-all;
}
.wxParse-li:before {
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  width: 10rpx;
  height: 10rpx;
  background: #999;
  content: '';
  border-radius: 100%;
}
.wxParse-h5 {
  padding: 5rpx 0;
  font-weight: 600;
}
.iconfont.icon-kafei {
  display: block;
  font-size: 90rpx;
  color: #eee;
  margin-bottom: 10rpx;
}
.Rose-small {
  padding: 0 10rpx;
  font-size: 30rpx;
  color: #999;
}
.Rose-back {
  margin: 20rpx 0 0 20rpx;
  color: #999;
  font-size: 28rpx;
  padding: 10rpx;
  line-height: 1.6;
  background: #f5f5f5;
}
.Rose-tt {
  color: #333;
}
.Rose-back-item {
  line-height: 1.4;
  word-break: break-all;
  padding: 5rpx 0;
}
.Rose-image {
  flex: none;
  width: 70rpx;
  height: 70rpx;
}
.Rose-resource {
  display: flex;
}
.Rose-form {
  margin: 0 0 0 20rpx;
}
.Rose-end {
  padding: 0 0 30rpx;
  text-align: center;
}
.Rose-word {
  font-size: 30rpx;
  color: #999;
  line-height:30rpx;
}
.Rose-Right{
  margin:2px 0 0;

  float: right;
  font-size:26rpx;
  color:#999;
}

.text-center{
  text-align: center
}
