/* pages/peoject_page/project_page.wxss */
.Rose-white {
  background: #fff;
}
image {
  width: 100%;
}
.Rose-detail {
  background: #fff;
  font-size: 32rpx;
  line-height: 1.6;
  padding: 20rpx 20rpx 120rpx;
  color: #666;
}
.Rose-title {
  color: #000;
  font-size: 48rpx;
  line-height: 1.2;
}
.Rose-addtime {
  margin: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}
.Rose-imgitem {
  height: 330rpx;
  display: block;
  width: 100%;
}
.wxParse-pre {
  background: #000;
  padding: 10rpx;
  margin: 20rpx 0;
}
.Rose-keywords {
  margin-left: 20rpx;
}
.Rose-sorry {
  padding: 120rpx 0 40rpx;
  font-size: 24rpx;
  color: #ccc;
}
.Rose-item {
  margin-top: 30px;
  font-size: 32rpx;
}
.wxParse-p {
  word-break: break-all;
  padding: 10rpx 0;
}
.Rose-line, .wxParse-h3 {
  font-size: 36rpx;
  position: relative;
  padding: 10rpx 20rpx;
  line-height: 1;
  color: #333;
}
.Rose-line:before, .wxParse-h3:before {
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 8rpx;
  height: 36rpx;
  content: '';
  background: #4bb777;
}
.wxParse-h3 {
  margin: 80rpx 0 0;
}
/*改版评论*/
.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #d9d9d9;
  background: #fff;
}
.Rose-flex {
  padding: 20rpx;
  display: flex;
}
.Rose-none {
  display: block;
  flex: none;
  width: 2.6em;
}
.text-left {
  text-align: left;
}
.text-right {
  text-align: right;
}
.Rose-none .iconfont {
  font-size: 40rpx;
  color: #999;
  padding-top: 6rpx;
}
.Rose-input {
  flex: 1;
  line-height: 1;
  padding: 8rpx 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 4rpx;
  font-size: 30rpx;
}
.Rose-btn {
  width: 3em;
  height: 100%;
  margin-top: 20rpx;
  background: #4bb777;
  font-size: 17px;
  border: none;
  color: #fff;
  border-radius: 20rpx;
}
button[disabled]:not([type]) {
  background: #ddd;
  color: #fff;
}
textarea.Rose-input {
  height: 200rpx;
}
.Rose-items {
  padding: 10rpx 0 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
.Rose-lists{
  padding: 20rpx
}
.Rose-comment-title {
  line-height: 2;
  color: #333;
  font-size: 16px;
}
.Rose-comment-content {
  color: #666;
  font-size: 30rpx;
  line-height: 1.6;
  padding:0 0 0 40rpx;

}
.Rose-info {
  display: flex;
  width: 100%;
  font-size: 24rpx;
  color: #a8a8a8;
  line-height: 1;
  padding-bottom: 10rpx;
}
.Rose-name {
  width: 40%;
  float: left;
  text-align: left;
}
.Rose-time {
  flex: 1;
  text-align: right;
  line-height: 40rpx;
  padding-top: 16rpx;
}
.Rose-edit {
  width: 20%;
  float: left;
}
.Rose-edit icon {
  font-size: 36rpx;
  margin: 0 10rpx;
  color: #999;
}
.female {
  color: #ff80c2;
}
.male {
  color: #8a90fa;
}
.Rose-name .iconfont {
  font-size: 34rpx;
}
.Rose-empty {
  padding: 20rpx 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.wxParse-li {
  position: relative;
  padding-left: 40rpx;
}
.wxParse-li:before {
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  width: 10rpx;
  height: 10rpx;
  background: #666;
  content: '';
  border-radius: 100%;
}
.wxParse-h5 {
  padding: 5rpx 0;
  font-weight: 600;
}
.iconfont.icon-kafei {
  display: block;
  font-size: 90rpx;
  color: #eee;
  margin-bottom: 10rpx;
}
.Rose-small {
  padding: 0 10rpx;
  font-size: 30rpx;
  color: #999;

}

