page{
  background: #e5e5e5;
}
.Rose-bar{
  height: 100rpx;
  background: #4bb777;
  color: #fff;
  line-height: 100rpx;
  padding: 0 10rpx
}
.Rose-floor1{
  padding: 40rpx;
  background: rgba(8,134,74,0.90);
  color: #fff;
  font-size: 24rpx;
  text-align: center
}
.Rose-top-quote{
  margin: 60rpx 20rpx;
  font-size: 32rpx
}
.Rose-news{
  overflow: hidden;
  margin: 20rpx 0;
  padding: 0 20rpx;
  background: #fff;
}
.Rose-imgitem{
 flex: none;
 width: 100%;
 height: 240rpx;
}
.Rose-content{
  padding: 20rpx 0;
  color: #333;
}
.Rose-title{
  width: 100%;
  padding: 30rpx 0;
  font-size: 34rpx;
  color: #333;
}
.Rose-time{
  text-align: right;
  font-size: 24rpx;
  color: #999
}
.Rose-detail{
  display: -webkit-box;
  overflow: hidden;
  line-height: 1.4;
  text-align: left;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #666;
}
.Rose-flex{
  display: flex;
  flex-direction: row
}
.Rose-kind{
  text-align: left;
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(8,134,74,0.90)
}
.Rose-flex1{
  flex: 1
}
