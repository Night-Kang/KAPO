/* components/bottombar/bottombar.wxss */


.Rose-center{
  text-align: center
}
.Rose-comments{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 340rpx;
  z-index: 6;
  background: #fff;
  border-top: 2rpx solid #f2f2f2;
  transition: all 0.25s ease
}
.Rose-post {
 width: auto;
 height: 160rpx;
 margin: 40rpx 40rpx 0;
 padding: 10rpx;
 background: #eee;
 color: #333;
 font-size: 28rpx;
 border-radius: 8rpx;
}
.Rose-btn{
  background: #4bb777;
  margin: 20rpx 40rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
  text-align: center;
  box-shadow: none;
  float: right
}
.Rose-btn.disabled{
  opacity: 0.5;
  color: #eee
}
.Rose-modal{
   position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  background: rgba(0,0,0,0.5);
}
