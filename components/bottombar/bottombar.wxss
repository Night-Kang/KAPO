/* components/bottombar/bottombar.wxss */
@import "/assets/icon/iconfont";
.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #d9d9d9;
  z-index: 5;
  background: #fff;
}
.Rose-flex {
  padding: 14rpx 20rpx;
  display: flex;
}
.Rose-none{
  width: 120rpx;
  flex: none
}
.Rose-none .iconfont {
  font-size: 48rpx;
  padding: 15rpx 10rpx 0 0;
  color: #4bb777;
}
.Rose-input {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #d9d9d9;
  font-size: 24rpx;
  border-radius: 4rpx;
  color: #999;
}
.Rose-center{
  text-align: center
}
.Rose-comments{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 340rpx;
  z-index: 6;
  background: #fff;
  border-top: 2rpx solid #f2f2f2;
}
.Rose-post {
 width: auto;
 height: 160rpx;
 margin: 40rpx 40rpx 0;
 padding: 20rpx;
 background: #eee;
 color: #666;
 font-size: 26rpx;
 border-radius: 8rpx;
}
.Rose-btn{
  background: #4bb777;
  margin: 20rpx 40rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
  text-align: center;
  box-shadow: none;
  float: right
}
.Rose-btn.disabled{
  opacity: 0.5;
  color: #eee
}
.Rose-modal{
   position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  background: rgba(0,0,0,0.5);
}
