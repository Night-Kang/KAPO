<view class="Rose-fixed">
    <view class="Rose-flex">
        <view class="Rose-input" bindtap="commentBox">点击评论回复</view>
        <view class="Rose-none Rose-center" bindtap="commentBox">
            <icon class="iconfont icon-pinglun"></icon>{{pinglunnum}}
        </view>
        <view class="Rose-none Rose-center"  bindtap="wetherLike" >
            <icon class="iconfont {{ like?'icon-xiangqu_fill':'icon-xiangqu'}}"></icon>
            {{likenum}}
        </view>
    </view>
</view>
<!-- 评论框 -->
<view class="Rose-modal" wx:if="{{show}}" bindtap="closeBox"></view>
<view class="Rose-comments" wx:if="{{show}}"  style="bottom:{{bottom}}px">
    <form bindsubmit="postComments"   report-submit="true">
        <textarea
            name="content"
            class="Rose-post"
            value="{{content}}"
            bindinput="forContent"
            maxlength="-1"
            fixed
            focus="{{show}}"
            adjust-position="{{true}}"
            bindfocus="foucus"
            bindblur="blur"
            auto-focus ="{{true}}"
            bindconfirm= "postComments"
            placeholder="点击评论回复 (300字以内哦)">
        </textarea>
