<!-- 评论框 -->
<view wx:if='{{commentShow}}'>
    <view class="Rose-modal" bindtap="closeBox"></view>
    <view class="Rose-comments" style="bottom:{{bottom}}px">
        <form bindsubmit="postComments"   report-submit="true">
            <textarea
            name="content"
            class="Rose-post"
            value="{{content}}"
            bindinput="forContent"
            maxlength="-1"
            fixed
            focus="{{commentShow}}"
            adjust-position="{{true}}"
            bindfocus="foucus"
            bindblur="blur"
            auto-focus ="{{true}}"
            bindconfirm= "postComments"
            placeholder="{{placeholder}}">
        </textarea>
        <button class="Rose-btn {{disabled? 'disabled':''}}" size="mini" wx:if="{{canIUse}}" form-type="submit" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">发送</button>
        <button form-type="reset" class="Rose-btn fl" type="default" size="mini">清空</button>
    </form>
</view>
</view>
